</Layout>

<style>
    h1 {
        font-weight: 700;
        font-size: 1.5rem;
        text-align: center;
        margin: 2rem;
    }
    main {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
        /* margin: 1rem; */
        gap: 0.5rem 1.5rem;
        /* overflow: clip; */
        margin: 0 auto;
        margin-bottom: 4rem;
    }
    img {
        aspect-ratio: 1;
        object-fit: cover;
        margin: 0.5rem 0;
    }
    a {
        background-color: black;
        background-image: url('/arrow-up.svg');
        background-size: cover;
        width: 3rem;
        aspect-ratio: 1;
        display: inline;
        position: fixed;
        right: 3px;
        bottom: 3px;
    }
    @media (max-width: 65rem) {
        main {
            grid-template-columns: 1fr 1fr 1fr 1fr;
        }
    }
    @media (max-width: 45rem) {
        main {
            grid-template-columns: 1fr 1fr 1fr;
        }
    }
    @media (max-width: 35rem) {
        main {
            grid-template-columns: 1fr 1fr;
        }
    }
</style>