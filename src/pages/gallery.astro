---
import Layout from "../layouts/Layout.astro";
import GalleryNavbar from "../components/GalleryNavbar.astro";
---

<Layout>
    <GalleryNavbar />
    <h1 id="top">We Take Great Pride In Our Jobs</h1>
    <main>
        <img src="/gallery/g1.jpeg" alt="">  
        <img src="/gallery/g2.jpeg" alt="">  
        <img src="/gallery/g3.jpeg" alt="">  
        <img src="/gallery/g4.jpeg" alt="">  
        <img src="/gallery/g5.jpeg" alt="">  
        <img src="/gallery/g6.jpeg" alt="">  
        <img src="/gallery/g7.jpeg" alt="">  
        <img src="/gallery/g8.jpeg" alt="">  
        <img src="/gallery/g9.jpeg" alt="">  
        <img src="/gallery/g10.jpeg" alt="">  
        <img src="/gallery/g11.jpeg" alt="">  
        <img src="/gallery/g12.jpeg" alt="">  
        <img src="/gallery/g13.jpeg" alt="">  
        <img src="/gallery/g14.jpeg" alt="">  
        <img src="/gallery/g15.jpeg" alt="">  
        <img src="/gallery/g16.jpeg" alt="">  
    </main>
    <a href="#top">
        <span class="sr-only">Back to top arrow</span>
        <!-- <img src="/arrow-up.svg" alt=""> -->
    </a>
</Layout>

<style>
    h1 {
        font-weight: 700;
        font-size: 1.5rem;
        text-align: center;
        margin: 2rem;
    }
    main {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
        /* margin: 1rem; */
        gap: 0.5rem 1.5rem;
        /* overflow: clip; */
        margin: 0 auto;
    }
    img {
        /* width: 15vw; */
        aspect-ratio: 1;
        object-fit: cover;
        margin: 0.5rem 0;
    }
    a {
        background-color: black;
        background-image: url('/arrow-up.svg');
        background-size: cover;
        width: 3rem;
        aspect-ratio: 1;
        display: inline;
        position: fixed;
        right: 3px;
        bottom: 3px;
    }
    @media (max-width: 65rem) {
        main {
            grid-template-columns: 1fr 1fr 1fr 1fr;
        }
    }
    @media (max-width: 45rem) {
        main {
            grid-template-columns: 1fr 1fr 1fr;
        }
    }
    @media (max-width: 35rem) {
        main {
            grid-template-columns: 1fr 1fr;
        }
    }
</style>